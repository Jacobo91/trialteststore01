{% assign product = product %}
{% assign images = product.images %}

<div class="enhanced-product-card__image-wrapper">
        {%- if images.size > 1 -%}
            <img src="{{ images[0] | image_url }}" alt="{{ product.title }}">
        {% else %}
            <img src="{{ images[0] | image_url }}" alt="{{ product.title }}">
        {%- endif -%}
</div>