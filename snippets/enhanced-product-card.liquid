
{% assign product = product %}

<style>
.enhanced-product-card {
    cursor: pointer;
    text-decoration: none;
}
</style>

<a id="enhanced-product-card-{{ product.id }}" href="{{ product.url }}" class="enhanced-product-card">
    {% render 'enhanced-product-card-image', product: product %}
    <div class="enhanced-product-card__product-info">
        <h4>{{ product.title }}</h4>
        <span class="product-price">{{ product.price | money }}</span>
        {%- if product.compare_at_price -%}
            <span class="product-compared-at-price">{{ product.compare_at_price | money }}</span>
        {%- endif -%}
    </div>
</a>