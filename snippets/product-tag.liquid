<style>
    .product-tag {
        width: fit-content;
        height: fit-content;
        padding: 0 8px;
        border-radius: 20px;
        font-size: 12px;
        color: white;
    }
    .product-tag.new {
        background-color: green;
    }
    .product-tag.sale {
        background-color: red;
    }
    .product-tag.regular {
        background-color: grey;
    }
</style>

{% assign product = product %}
{% assign special_tags = 'new,sale,regular' | split: ','%}
{% for tag in product.tags %}
    {% if special_tags contains tag %}
        <span class="product-tag {{ tag }}">{{ tag | capitalize }}</span>
    {% endif %}
{% endfor %}

