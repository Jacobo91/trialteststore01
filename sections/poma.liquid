<style>
    :root {

        /* control max width of the section */
        --max-width: {{ section.settings.max_width }};

        --font-family-first: "helvetica";
        --font-family-second: "helvetica";
        --title-font-size-mobile: {{ section.settings.title_mobile }}px;
        --title-font-size-desktop: {{ section.settings.title_desktop }}px;
        --subtitle-font-size-mobile: {{ section.settings.subtitle_mobile }}px;
        --subtitletitle-font-size-desktop: {{ section.settings.subtitle_desktop }}px;
        --card-infotitle-font-size-mobile: {{ section.settings.card_title_mobile }}px;
        --card-info-title-font-size-desktop: {{ section.settings.card_title_desktop }}px;
        --section-margin-mobile-block: {{ section.settings.margin_block_mob }}px;
        --section-margin-mobile-inline: {{ section.settings.margin_inline_mob }}px;
        --section-margin-desktop-block: {{ section.settings.margin_block_desk }}px;
        --section-margin-desktop-inline: {{ section.settings.margin_inline_desk }}px;
        --wrapper-padding-mobile-block: {{ section.settings.w_padding_block_mob }}px;
        --wrapper-padding-mobile-inline: {{ section.settings.w_padding_inline_mob }}px;
        --wrapper-padding-desktop-block: {{ section.settings.w_padding_block_desk }}px;
        --wrapper-padding-desktop-inline: {{ section.settings.w_padding_inline_desk }}px;

        /* gaps between title and card and video and info */
        --row-gap: {{ section.settings.row_gap }}px;
        --column-gap: {{ section.settings.column_gap }}px;

        /* background color */
        --gb-color: {{ section.settings.bg_color }};

        /* border radius */
        --border-radius: 4px;
    }

    .custom-img-text {
        display: grid;
        justify-content: center;
        margin-block: var(--section-margin-mobile-block);
        margin-inline: var(--section-margin-mobile-inline);
    }
    
    .wrapper {
        max-width: var(--max-width);
        width: fit-content;
        background: var(--gb-color);
        padding-block: var(--wrapper-padding-mobile-block);
        padding-inline: var(--wrapper-padding-mobile-inline);
        display: flex;
        flex-direction: column;
        row-gap: var(--row-gap);
        column-gap: var(--column-gap);
    }

    .custom-img-text__header {
        text-align: center;
    }

    .title {
        font-family: var(--font-family-first);
        font-size: var(--title-font-size-mobile);
        display: inline-block;
        margin: 0; /* ccambie segun el figma */
    }

    .subtitle {
        font-family: var(--font-family-second);
        font-size: var(--subtitle-font-size-mobile);
        margin-block: 0; /* ccambie segun el figma */
    }

    .custom-img-text__info h2 {
        font-family: var(--font-family-first);
        font-size: var( --card-infotitle-font-size-mobile);
    }

    video {
        width: 100%;
        border-radius: var(--border-radius);
    }

    .video-wrapper {
        width: 100%;
    }

    video,
    .video-wrapper {
        height: 100%;
    }

    .value-prop {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .value-prop h5 {
        margin-block: 10px;
    }

    .value-prop p {
        margin-block: 8px;
        line-height: 22px;
    }

    .custom-img-text__info a {
        text-decoration: none;
        color: black;
        padding: 4px 12px;
        border: 1px solid black;
        cursor: pointer;
        border-radius: 20px;
        margin: 30px auto 0 auto;
        display: block;
        width: fit-content;
    }

      .custom-play-pause {
        position: absolute;
        bottom: 20px;
        right: 20px;
        background: rgba(0,0,0,0.6);
        color: white;
        border: none;
        padding: 8px 12px;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
    }

    @media screen and (min-width: 1024px) {
        .custom-img-text {
            margin-block: var(--section-margin-desktop-block);
            margin-inline: var(--section-margin-desktop-inline);
        }
        .wrapper {
            width: fit-content;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-items: stretch;
            background: transparent;
            padding: 0;
        }
        .custom-img-text__header {
            flex-basis: 100%;
            text-align: center;
        }
        .custom-img-text__info {
            background: var(--gb-color);
            border-radius: var(--border-radius);
            padding-block: var(--wrapper-padding-desktop-block);
            padding-inline: var(--wrapper-padding-desktop-inline);
        }
        .custom-img-text__image,
        .custom-img-text__info {
            flex-basis: calc(50% - var(--column-gap));
        }
        .title {
            font-size: var(--title-font-size-desktop);
        }
        .subtitle {
            font-size: var(--subtitletitle-font-size-desktop);
        }
        .custom-img-text__info h2 {
            font-size: var(--card-info-title-font-size-desktop);
        }
        .custom-img-text__info a {
            margin: 30px 0 0 0;
        }
    }
</style>

<section id="section-{{ section.id }}" class="custom-img-text">
    <div class="wrapper">
        <div class="custom-img-text__header">
            <span class="title">{{ section.settings.title }}</span>
            <h2 class="subtitle">{{ section.settings.subtitle }}</h2>
        </div>
    
        <div class="custom-img-text__image">
            <div class="video-wrapper" style="position: relative;">
                {% assign video_meta = shop.metaobjects.video["video-kpgeg7ya"] %}
                {% assign poster_image = section.settings.poster_image %}
                {% if video_meta != blank and video_meta.video != blank and poster_image != blank %}
                {{ video_meta.video | media_tag: autoplay: false, controls: false, poster: poster_image| image_url: width: 800 }}
                <button type="button" class="custom-play-pause">Play</button>
                {% endif %}
            </div>
        </div>
    
        <div class="custom-img-text__info">
            <h2>{{ section.settings.card_info_title }}</h2>
            {% for block in section.blocks %}
                <div class="value-prop">
                    <div class="image-wrapper icon">
                        <img src="{{ block.settings.value_prop_img | image_url: width: 40 }}"alt="icon-display">
                    </div>
                    <div class="value-prop__info">
                        <h5>
                            {{ block.settings.value_prop_title }}
                        </h5>
                        <p>
                            {{ block.settings.value_prop_text }}
                        </p>
                    </div>
                </div>
            {% endfor %}
            <a href="{{ section.settings.url }}">
                {{ section.settings.btn_text }}
            </a>
        </div>
    </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.querySelector('.video-wrapper video');
    const btn = document.querySelector('.custom-play-pause');

    if(video && btn) {
      btn.addEventListener('click', function() {
        if (video.paused) {
          video.play();
          btn.textContent = 'Pause';
        } else {
          video.pause();
          btn.textContent = 'Play';
        }
      });
    }
  });
</script>


